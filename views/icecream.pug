extends layout

block content
  - let create = `dispatch(\"/Hotels/create\")`
    button.btn(class="btn-secondary ml-1", onclick= create) create
  h1= title
  div(class="container-fluid")
        div(class="row m-1") 
        - let icecream = results;
          each ice,goal in icecream 
            -let destination = `dispatch(\"/icecream/update?id=${ice._id}\")` 
            -let detail = `dispatch(\"/icecream/detail?id=${ice._id}\")` 
            -let del = `dispatch(\"/icecream/delete?id=${ice._id}\")` 
             div(class="col-sm-4 bg-info m-1 p-3") #{ice.flavour}-#{ice.color} - #{ice.cost}
              button.btn( class="btn-primary ml-1", onclick= destination) Update 
              button.btn( class="btn-primary ml-1", onclick= detail) view 
              button.btn( class="btn-primary ml-1", onclick= del) delete 


